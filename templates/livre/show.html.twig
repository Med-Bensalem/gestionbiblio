{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <table class="table table-striped" >
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de Pages</th>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <th>Date Edition</th>
                <td>{{ livre.dateedition ? livre.dateedition|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre Exemplaires</th>
                <td>{{ livre.nbexemplaires }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ livre.editeur.nomediteur }}</td>
            </tr>
            <tr>
                <th>Cat√©gorie</th>
                <td>{{ livre.categorie.designation }}</td>
            </tr>
            <tr>
                <th>Auteurs</th>
                 <td>
                     {% for auteur in livre.auteur %}
                       <span class="badge badge-primary">
                          {{ auteur.prenom }} {{ auteur.nom }}
                        </span>
                     {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    <div class="container">
        <div class="row">
            <div class="col col-lg-3">
                <a href="{{ path('livre_index') }}"><span class="btn btn-primary"><i class="fa fa-backward">&nbsp;Retour</i></span></a>

                <a href="{{ path('livre_edit', {'id': livre.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil">&nbsp;Modifier</i></span> </a>
            </div>
            {{ include('livre/_delete_form.html.twig') }}
        </div>
    </div>




{% endblock %}
